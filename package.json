{
  "name": "quizz-app",
  "version": "1.0.0",
  "description": "Quizz App",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "server": "cross-env NODE_ENV=development nodemon server.js",
    "seed": "cross-env NODE_ENV=development node config/seeder.js --import",
    "reset": "cross-env NODE_ENV=development node config/seeder.js --delete",
    "client": "npm start --prefix client",
    "client-install": "cd ./client/ && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false cd ./client/ && npm install && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.10"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.3"
  }
}
